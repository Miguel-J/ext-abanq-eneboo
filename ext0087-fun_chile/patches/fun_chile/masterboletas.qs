//////////////////////////////////////////////////////////////////
//// INTERNA /////////////////////////////////////////////////////
class interna
{
  var ctx: Object;
  function interna(context)
  {
    this.ctx = context;
  }
}
//// INTERNA /////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////

/** @class_declaration oficial */
//////////////////////////////////////////////////////////////////
//// OFICIAL /////////////////////////////////////////////////////
class oficial extends interna
{
  function oficial(context)
  {
    interna(context);
  }
}
//// OFICIAL /////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////

/** @class_declaration funChile */
/////////////////////////////////////////////////////////////////
//// FUN_CHILE //////////////////////////////////////////////////

class funChile extends oficial
{
  function funChile(context)
  {
    oficial(context);
  }

  function init()
  {
    this.ctx.funChile_init();
  }
  function imprimir(codBoleta: String)
  {
    return this.ctx.funChile_imprimir(codBoleta);
  }
}

//// FUN_CHILE //////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_declaration head */
/////////////////////////////////////////////////////////////////
//// DESARROLLO /////////////////////////////////////////////////
class head extends funChile
{
  function head(context)
  {
    funChile(context);
  }
  function pub_imprimir(codBoleta: String): String {
    return this.imprimir(codBoleta);
  }
}
//// DESARROLLO /////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////

/** @class_declaration ifaceCtx */
/////////////////////////////////////////////////////////////////
//// INTERFACE  /////////////////////////////////////////////////
class ifaceCtx extends head
{
  function ifaceCtx(context)
  {
    head(context);
  }
}

const iface = new ifaceCtx(this);
