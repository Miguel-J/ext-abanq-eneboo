/** @class_definition funChile */
/////////////////////////////////////////////////////////////////
//// FUN_CHILE //////////////////////////////////////////////////

function funChile_init()
{
  this.cursor().setMainFilter("codserie='BO'");

  connect(this.child("toolButtonPrint"), "clicked()", this, "iface.imprimir()");
}

function funChile_imprimir(codBoleta: String)
{
  if (sys.isLoadedModule("flfactinfo")) {
    var util: FLUtil = new FLUtil;
    var codigo: String;
    if (codBoleta) {
      codigo = codBoleta;
    } else {
      if (!this.cursor().isValid())
        return;
      codigo = this.cursor().valueBuffer("codigo");
    }

    var numCopias: Number = util.sqlSelect("facturascli f INNER JOIN clientes c ON c.codcliente = f.codcliente", "c.copiasfactura", "f.codigo = '" + codigo + "'", "facturascli,clientes");
    if (!numCopias)
      numCopias = 1;

    var curImprimir: FLSqlCursor = new FLSqlCursor("i_facturascli");
    curImprimir.setModeAccess(curImprimir.Insert);
    curImprimir.refreshBuffer();
    curImprimir.setValueBuffer("descripcion", "temp");
    curImprimir.setValueBuffer("d_facturascli_codigo", codigo);
    curImprimir.setValueBuffer("h_facturascli_codigo", codigo);
    flfactinfo.iface.pub_lanzarInforme(curImprimir, "i_facturascli", "", "", false, false, "", "i_boletascli", numCopias);
  } else
    flfactppal.iface.pub_msgNoDisponible("Informes");
}

